{
    "tweetwall": {
        "query": "#devoxx",
        "title": "The JavaFX Hallway Tweetwall for Devoxx BE 2019!",
        "stylesheetResource": "tweetwall.css"
    },
    "stepEngine": {
        "steps": [
            {
                "stepClassName": "org.tweetwallfx.devoxx19be.steps.Devoxx19ShowSchedule",
                "config": {
                    "layoutX": 103,
                    "layoutY": 100,
                    "showAvatar": true,
                    "avatarArcSize": 16,
                    "avatarSize": 64,
                    "avatarSpacing": 4,
                    "width": 1200,
                    "showFavourite": true,
                    "stepDuration": 500
                }
            },
            {
                "stepClassName": "org.tweetwallfx.stepengine.steps.PauseStep",
                "config": {
                    "amount": 15,
                    "unit": "SECONDS"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NodeFadeOutStep",
                "config": {
                    "nodeSelector": "#scheduleNode"
                }
            }
        ]
    }
}
